---
import { Sprite } from 'astro-icon';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
import Wrapper from '../components/Wrapper.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/blog/Card.astro';
import Outro from '../components/blog/Outro.astro';

let { content: { title, publishDate, description, authors } } = Astro.props;
const { canonicalURL } = Astro.request;
const meta = {
	title: `${title} | Astro`,
	description,
	canonicalURL
}
---

<html lang="en">

<head>
	<BaseHead {...meta} />
	<link rel="stylesheet" href={Astro.resolve('../styles/blog.css')} />
	<style>
		:root {
			scroll-padding-top: 10rem;
			background: var(--color-tan);
		}
		main {
			padding-bottom: 8rem;
			min-height: 100vh;
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		article {
			max-width: 48rem;
			padding-bottom: 4rem;
			display: flex;
			flex-flow: column nowrap;
			font-family: var(--font-body);
			font-size: var(--size-500);
			line-height: 1.3;
			color: var(--color-midnight);
		}
		article > :global(* + *) {
			margin-top: 1em;
		}
		article :is(h2):not([class]) {
			margin-top: 3em;
		}
		article > :global(.note:last-child) {
			margin-top: 8rem;
		}
		.hero {
			display: flex;
			flex-flow: row wrap;
			padding: 3rem 0 2rem;
			max-width: 100%;
		}
		hr {
			border: 0;
			border-top: 1px solid var(--color-dusk);
			margin-left: -2rem;
			margin-right: -2rem;
			margin-top: 2rem;
			margin-bottom: 4rem;
		}
	</style>
</head>

<body>
	<Sprite.Provider>
		<Header >
			<Nav />
		</Header>

		<Wrapper>
			<main id="content" class="container">
				<article>
					<header class="hero">
						<Card post={{ title, description, authors, publishDate }} variant="hero" />
					</header>
					
					<hr>

					<slot />
				</article>
			</main>

			<Outro tweet={{ title, href: canonicalURL.toString() }} />
		</Wrapper>

		<Footer />
	</Sprite.Provider>

	<noscript></noscript>
	<script type="module" src={Astro.resolve('../scripts/defer.js')}></script>
</body>

</html>
