---
const { href, items = [] } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<not-marquee>
    <Tag {href} class="track">
        {Array.from({ length: 12 }, () => items.map(item => <span>{item}</span>))}
    </Tag>
</not-marquee>

<style>
    not-marquee {
        --speed: 210s;
        display: flex;
        position: relative;
        width: 100vw;
        max-width: 100%;
        height: 32px;
        overflow-x: hidden;

        background-color: white;
        border-bottom: 1px solid black;
        font-family: var(--font-display);
        text-transform: uppercase;
        font-size: 0.75em;
        font-weight: 700;
        letter-spacing: 1px;
        background: white;
        z-index: 1;
        user-select: none;
    }

    not-marquee:hover .track {
        animation-play-state: paused;
    }

    .track {
        height: 100%;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        white-space: nowrap;
        will-change: transform;
        animation: marquee var(--speed) linear infinite;
        text-decoration: none;
        color: var(--color-midnight);
        transition: color 300ms cubic-bezier(0.23, 1, 0.320, 1);
    }

    a.track:hover,
    a.track:focus {
        color: var(--color-purple);
    }

    a.track:active {
        color: var(--color-blue);
    }

    span {
        display: inline-block;
        transform: translate(-125vw);
        padding: 0.5em 0.5em;
    }

    span + span {
        padding-left: 4em;
    }

    @keyframes marquee {
        from { transform: translateX(100vw); }
        to { transform: translateX(-42.5%); }
    }
</style>
