---
const { items = [] } = Astro.props;
---

<not-marquee>
    <div class="track">
        {Array.from({ length: 12 }, () => items.map(item => <span>{item}</span>))}
    </div>
</not-marquee>

<style>
    not-marquee {
        --speed: 210s;
        display: flex;
        position: relative;
        width: 100vw;
        max-width: 100%;
        height: 32px;
        overflow-x: hidden;

        background-color: white;
        border-bottom: 1px solid black;
        font-family: var(--font-display);
        text-transform: uppercase;
        font-size: 0.75em;
        font-weight: 700;
        letter-spacing: 1px;
        background: white;
        z-index: 1;
        user-select: none;
    }

    not-marquee:hover .track {
        animation-play-state: paused;
    }

    .track {
        height: 100%;
        padding: 0.125em 0.5em;
        margin-top: -0.125em;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        white-space: nowrap;
        will-change: transform;
        animation: marquee var(--speed) linear infinite;
    }

    span {
        transform: translateX(-125vw);
    }

    span + span {
        margin-left: 4em;
    }

    @keyframes marquee {
        from { transform: translateX(100vw); }
        to { transform: translateX(-42.5%); }
    }
</style>
